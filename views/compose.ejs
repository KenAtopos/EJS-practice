<%- include('partials/header'); -%>

    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <label for="newTitle">Title</label>
            <input type="text" name="postTitle" id="newTitle" autofocus="true" class="form-control">
        </div>
        <div class="form-group">
            <label for="postArea">Post</label>
            <textarea name="postArea" id="postArea" class="form-control"></textarea>
        </div>
        <button type="submit" name="button" class="btn btn-primary">Publish</button>
    </form>

<%- include('partials/footer'); -%>